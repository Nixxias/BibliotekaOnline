@model LoginViewModel

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logowanie</title>
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 40vh; margin-top: 80px;">
        <div class="card" style="width: 150%; max-width: 600px;">
            <div class="card-body">
                <h5 class="card-title text-center">Zaloguj się</h5>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Login" class="form-label">Login</label>
                        <input asp-for="Login" class="form-control" placeholder="Wprowadź swój login" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Hasło</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Wprowadź swoje hasło" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("Register", "Account")" class="text-decoration-none">Zarejestruj się</a>
                        <span class="text-muted mx-2">|</span>
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Zapomniałeś hasła?</a>
                    </div>
                </form>

                

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
