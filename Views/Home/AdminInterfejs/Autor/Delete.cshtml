@model TEST.Models.Autor


<h1>Usuwanie Autora</h1>

<form method="post" asp-action="Delete" asp-controller="Admin">
    <input type="hidden" name="entity" value="@ViewData["Entity"]" />

    <div class="form-group">
        <label for="Imie">Imię</label>
        <input type="text" id="Imie" class="form-control" value="@Model.Imie" disabled />
    </div>
    <div class="form-group">
        <label for="Nazwisko">Nazwisko</label>
        <input type="text" id="Nazwisko" class="form-control" value="@Model.Nazwisko" disabled />
    </div>
    <div class="form-group">
        <label for="DataUrodzenia">Data urodzenia</label>
        <input type="date" id="DataUrodzenia" class="form-control" value="@Model.DataUrodzenia.ToString("yyyy-MM-dd")" disabled />
    </div>

    <div class="form-group">
        <p>Jesteś pewny, że chcesz usunąć tego autora? Usunięcie go wiąże się z usunięciem każdej wartości posiadającą tego Autor</p>
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a href="@Url.Action("Index", "Admin", new { entity = "autor" })" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
