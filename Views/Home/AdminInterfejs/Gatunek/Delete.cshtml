@model Gatunek

<h1>Usuwanie Gatunku</h1>

<form method="post" asp-action="Delete" asp-controller="Admin">
    <input type="hidden" name="entity" value="@ViewData["Entity"]" />
    <div class="form-group">
        <label for="NazwaGatunku">Nazwa Gatunku</label>
        <input type="text" id="NazwaGatunku" class="form-control" value="@Model.NazwaGatunku" disabled />
    </div>

    <div class="form-group">
        <p>Jesteś pewny, że chcesz usunąć ten gatunek? Usunięcie go wiąże się z usunięciem każdej wartości posiadający ten Gatunek</p>
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a href="@Url.Action("Index", "Admin", new { entity = "gatunek" })" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
