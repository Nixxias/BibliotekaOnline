@model TEST.Models.Pracownicy

<h1>Usuwanie Pracownika</h1>

<form method="post" asp-action="Delete" asp-controller="Admin">
    <input type="hidden" name="entity" value="@ViewData["Entity"]" />
    <div class="form-group">
        <label for="Imie">Imię</label>
        <input type="text" id="Imie" class="form-control" value="@Model.Imie" disabled />
    </div>
    <div class="form-group">
        <label for="Nazwisko">Nazwisko</label>
        <input type="text" id="Nazwisko" class="form-control" value="@Model.Nazwisko" disabled />
    </div>
    <div class="form-group">
        <label for="Login">Login</label>
        <input type="text" id="Login" class="form-control" value="@Model.Login" disabled />
    </div>
    <div class="form-group">
        <label for="Stanowisko">Stanowisko</label>
        <input type="text" id="Stanowisko" class="form-control" value="@Model.Stanowisko" disabled />
    </div>
    <div class="form-group">
        <label for="Oddzial">Oddział</label>
        <input type="text" id="Oddzial" class="form-control" value="@Model.Oddzial?.MiastoAdres " Brak"" disabled />
    </div>

    <div class="form-group">
        <p>Jesteś pewny, że chcesz usunąć tego pracownika?</p>
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a href="@Url.Action("Index", "Admin", new { entity = "pracownicy" })" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
