@model TEST.Models.Czytelnicy


@{
    ViewData["Title"] = "Dodaj czytelnika";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddCzytelnik" method="post">
    <input type="hidden" name="entity" value="czytelnicy" />
    <div class="form-group">
        <label for="Imie">Imię</label>
        <input asp-for="Imie" class="form-control" placeholder="Wprowadź imię" required />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Nazwisko">Nazwisko</label>
        <input asp-for="Nazwisko" class="form-control" placeholder="Wprowadź nazwisko" required />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Login">Login</label>
        <input asp-for="Login" class="form-control" placeholder="Wprowadź login" required />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Haslo">Hasło</label>
        <input asp-for="Haslo" type="password" class="form-control" placeholder="Wprowadź hasło" required />
        <span asp-validation-for="Haslo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Miasto">Miasto</label>
        <input asp-for="Miasto" class="form-control" placeholder="Wprowadź miasto" required />
        <span asp-validation-for="Miasto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Adres">Adres</label>
        <input asp-for="Adres" class="form-control" placeholder="Wprowadź adres" required />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NumerPocztowy">Numer pocztowy</label>
        <input asp-for="NumerPocztowy" class="form-control" placeholder="Wprowadź numer pocztowy" required />
        <span asp-validation-for="NumerPocztowy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NrTel">Numer telefonu</label>
        <input asp-for="NrTel" class="form-control" placeholder="Wprowadź numer telefonu" required />
        <span asp-validation-for="NrTel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Wprowadź email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
   

    <button type="submit" class="btn btn-primary">Dodaj czytelnika</button>
</form>

<div>
    <a asp-action="Index" asp-route-entity="czytelnicy" class="btn btn-secondary">Powrót</a>
</div>

@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}