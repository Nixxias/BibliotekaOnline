@model TEST.Models.Wydawnictwo

<h1>Usuwanie Wydawnictwa</h1>

<form method="post" asp-action="Delete" asp-controller="Admin">
    <input type="hidden" name="entity" value="@ViewData["Entity"]" />
    <div class="form-group">
        <label for="NazwaWydawnictwa">Nazwa Wydawnictwa</label>
        <input type="text" id="NazwaWydawnictwa" class="form-control" value="@Model.NazwaWydawnictwa" disabled />
    </div>
    <div class="form-group">
        <label for="Siedziba">Siedziba</label>
        <input type="text" id="Siedziba" class="form-control" value="@Model.Siedziba" disabled />
    </div>
    <div class="form-group">
        <label for="DataZalozenia">Data Założenia</label>
        <input type="date" id="DataZalozenia" class="form-control" value="@Model.DataZalozenia.ToString("yyyy-MM-dd")" disabled />
    </div>

    <div class="form-group">
        <p>Jesteś pewny, że chcesz usunąć to wydawnictwo? Usunięcie jego wiąże się z usunięciem każdej wartości posiadającego dane Wydawnictwo</p>
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a href="@Url.Action("Index", "Admin", new { entity = "wydawnictwo" })" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
