@model TEST.Models.Oddzial

@{
    ViewData["Title"] = "Edytuj Oddzial";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="EditOddzialRegal" asp-controller="Admin">
    <input type="hidden" asp-for="IdOddzial" />


    <div class="form-group">
        <label for="Miasto">Miasto</label>
        <input type="text" id="Miasto" name="Miasto" class="form-control" value="@Model?.Miasto" required />
    </div>

    <div class="form-group">
        <label for="Adres">Adres</label>
        <input type="text" id="Adres" name="Adres" class="form-control" value="@Model?.Adres" required />
    </div>

    <div class="form-group">
        <label for="KodPocztowy">Kod Pocztowy</label>
        <input type="text" id="KodPocztowy" name="KodPocztowy" class="form-control" value="@Model?.KodPocztowy" required />
    </div>
   

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>

<div>
<a asp-action="Index" asp-route-entity="OddzialRegal" class="btn btn-secondary">Powrót</a>
</div>

@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
